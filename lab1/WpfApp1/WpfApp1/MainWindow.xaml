<Window x:Class="TextEditorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Editor - Новий файл"
        Height="450" Width="800">

    <DockPanel>

        <!-- МЕНЮ -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Новий" Click="New_Click"/>
                <MenuItem Header="Відкрити" Click="Open_Click"/>
                <MenuItem Header="Зберегти" Click="Save_Click"/>
                <MenuItem Header="Зберегти як..." Click="SaveAs_Click"/>
                <Separator/>
                <MenuItem Header="Вийти" Click="Exit_Click"/>
            </MenuItem>
        </Menu>

        <!-- ПОЛЕ ДЛЯ ТЕКСТУ -->
        <TextBox Name="Editor"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="14"
                 TextChanged="Editor_TextChanged"/>
    </DockPanel>
</Window>
